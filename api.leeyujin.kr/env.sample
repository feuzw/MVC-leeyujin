KAKAO_ADMIN_KEY=your_kakao_admin_key
KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
